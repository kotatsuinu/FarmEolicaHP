---
/**
 * ShippingInfo - 送料案内コンポーネント
 * 折りたたみ対応
 */
interface Props {
  collapsible?: boolean;
  defaultOpen?: boolean;
  compact?: boolean;  // コンパクト表示（商品詳細ページ用）
}

const { collapsible = true, defaultOpen = false, compact = false } = Astro.props;

const sagawaLink = "https://www.sagawa-exp.co.jp/send/fare/faretable03.html?_ga=2.73288595.1464715402.1770612007-66129190.1763209062";
---

<div class:list={[
  !compact && "bg-stone-white/95 backdrop-blur-sm shadow-lab"
]}>
  {collapsible ? (
    <details class="group" open={defaultOpen}>
      <summary class:list={[
        "cursor-pointer list-none flex justify-between items-center transition-colors duration-200",
        compact ? "py-2 text-warm-gray-500 hover:text-wet-soil" : "p-6 md:p-8 hover:bg-warm-gray-50/50"
      ]}>
        <span class:list={[
          "font-mono tracking-widest",
          compact ? "text-[10px]" : "text-xs text-warm-gray-500"
        ]}>
          {compact ? "送料について ▼" : <>SHIPPING <span class="font-serif">ー送料についてー</span></>}
        </span>
        {!compact && (
          <span class="font-mono text-xs text-old-copper group-open:rotate-180 transition-transform duration-300">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </span>
        )}
      </summary>
      <div class:list={[
        compact ? "pt-3 pb-1" : "px-6 md:px-8 pb-6 md:pb-8"
      ]}>
        <div class="space-y-3">
          <p class:list={[
            "text-warm-gray-600 font-serif",
            compact ? "text-xs" : "text-sm"
          ]}>
            発送元: <span class="font-mono text-wet-soil">福島県</span>（佐川急便・通常宅配便）
          </p>

          <div class:list={[compact ? "text-xs" : "text-sm"]}>
            <p class="font-mono text-[10px] text-warm-gray-500 mb-2">送料目安（税込）</p>
            <ul class="space-y-1 text-warm-gray-600 font-serif">
              <li>東北〜関東・信越: <span class="font-mono text-wet-soil">910円〜</span></li>
              <li>東海・北陸: <span class="font-mono text-wet-soil">1,040円〜</span></li>
              <li>関西: <span class="font-mono text-wet-soil">1,180円〜</span></li>
            </ul>
          </div>

          <p class="text-[10px] text-old-copper">
            ※夏季（6〜9月）はクール便のご利用をおすすめします（別途料金）
          </p>

          <p class="text-[10px] text-warm-gray-500">
            ※サイズ・地域により異なります。詳細は
            <a
              href={sagawaLink}
              target="_blank"
              rel="noopener noreferrer"
              class="text-old-copper hover:underline"
            >
              佐川急便料金表（福島県発）
            </a>
            をご確認ください。
          </p>
        </div>
      </div>
    </details>
  ) : (
    <div class="p-6 md:p-8">
      <h3 class="font-mono text-xs tracking-widest text-warm-gray-500 mb-6">
        SHIPPING <span class="font-serif">ー送料についてー</span>
      </h3>
      <div class="space-y-4">
        <p class="text-sm text-warm-gray-600 font-serif">
          発送元: <span class="font-mono text-wet-soil">福島県</span>（佐川急便・通常宅配便）
        </p>

        <div class="text-sm">
          <p class="font-mono text-xs text-warm-gray-500 mb-2">送料目安（税込）</p>
          <ul class="space-y-1 text-warm-gray-600 font-serif">
            <li>東北〜関東・信越: <span class="font-mono text-wet-soil">910円〜</span></li>
            <li>東海・北陸: <span class="font-mono text-wet-soil">1,040円〜</span></li>
            <li>関西: <span class="font-mono text-wet-soil">1,180円〜</span></li>
          </ul>
        </div>

        <p class="text-xs text-old-copper">
          ※夏季（6〜9月）はクール便のご利用をおすすめします（別途料金）
        </p>

        <p class="text-xs text-warm-gray-500">
          ※サイズ・地域により異なります。詳細は
          <a
            href={sagawaLink}
            target="_blank"
            rel="noopener noreferrer"
            class="text-old-copper hover:underline"
          >
            佐川急便料金表（福島県発）
          </a>
          をご確認ください。
        </p>
      </div>
    </div>
  )}
</div>
