---
/**
 * PurchaseGuide - 購入導線コンポーネント
 * Googleフォーム・Instagram DM
 */
import { SITE_CONFIG } from '../../config/site';

interface Props {
  formUrl?: string;
  variant?: 'full' | 'compact';
  title?: string;
}

const {
  formUrl = '#',  // TODO: Googleフォーム設定後に更新
  variant = 'full',
  title = 'ご購入・お問い合わせ'
} = Astro.props;
---

<section class:list={[
  "bg-warm-gray-50/50",
  variant === 'full' && "py-16",
  variant === 'compact' && "py-8",
]} data-animate>
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="font-serif text-xl md:text-2xl text-eolica-green mb-8 text-center">
      {title}
    </h2>

    <div class:list={[
      "grid gap-6",
      variant === 'full' && "md:grid-cols-2",
      variant === 'compact' && "md:grid-cols-2",
    ]}>
      <!-- Googleフォーム -->
      <a
        href={formUrl}
        class="group bg-stone-white p-6 md:p-8 shadow-lab hover:shadow-lab-lg transition-all duration-300 text-center"
      >
        <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center bg-eolica-green/10 rounded-full group-hover:bg-eolica-green/20 transition-colors duration-300">
          <svg class="w-6 h-6 text-eolica-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="font-mono text-sm text-wet-soil mb-2 group-hover:text-eolica-green transition-colors duration-300">
          購入フォーム
        </h3>
        <p class="text-xs text-warm-gray-600 font-serif">
          Googleフォームからご注文
        </p>
        {formUrl === '#' && (
          <p class="text-xs text-old-copper mt-2 font-mono">
            準備中
          </p>
        )}
      </a>

      <!-- Instagram DM -->
      <a
        href={SITE_CONFIG.sns.instagram}
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-stone-white p-6 md:p-8 shadow-lab hover:shadow-lab-lg transition-all duration-300 text-center"
      >
        <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center bg-old-copper/10 rounded-full group-hover:bg-old-copper/20 transition-colors duration-300">
          <svg class="w-6 h-6 text-old-copper" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </div>
        <h3 class="font-mono text-sm text-wet-soil mb-2 group-hover:text-old-copper transition-colors duration-300">
          Instagram DM
        </h3>
        <p class="text-xs text-warm-gray-600 font-serif">
          @farm_eolica へDMでお気軽に
        </p>
      </a>
    </div>

    {variant === 'full' && (
      <div class="mt-8 text-center">
        <p class="text-xs text-warm-gray-500 font-serif">
          ご不明な点がございましたら、お気軽にお問い合わせください。<br />
          農作業中は返信にお時間いただく場合がございます。
        </p>
      </div>
    )}
  </div>
</section>
