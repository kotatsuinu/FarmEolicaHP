---
import { SITE_CONFIG } from '../config/site';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Farm Eolica - 花農家の栽培記録と商品販売' } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600&family=Cormorant+Garamond:wght@300;400;500&family=Shippori+Mincho:wght@400;500;600&family=Zen+Old+Mincho:wght@400;500;600&family=Courier+Prime:wght@400;700&family=Space+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <!-- Google Analytics 4 -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-KCNMWNSTCG"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-KCNMWNSTCG');
    </script>

    <title>{title}</title>

    <!-- 開発環境用パスワードロック -->
    <script is:inline>
      (function() {
        // 開発環境のみで実行
        if (window.location.hostname === 'dev.farmeolica.com') {
          const AUTH_KEY = 'dev_auth_farmeolica';
          const CORRECT_PASSWORD = 'farmeolica';
          const PRODUCTION_URL = 'https://farmeolica.com';

          // 認証済みかチェック
          const isAuthenticated = sessionStorage.getItem(AUTH_KEY);

          if (!isAuthenticated) {
            // パスワードプロンプト表示
            const password = prompt('開発環境へのアクセスにはパスワードが必要です');

            if (password === CORRECT_PASSWORD) {
              // 認証成功
              sessionStorage.setItem(AUTH_KEY, 'true');
            } else {
              // 認証失敗または キャンセル → 本番サイトへリダイレクト
              window.location.href = PRODUCTION_URL;
            }
          }
        }
      })();
    </script>
  </head>
  <body class="min-h-screen bg-stone-white text-gray-900 font-serif antialiased relative">
    <!-- ノイズテクスチャ背景 -->
    <div class="fixed inset-0 bg-noise pointer-events-none z-0"></div>

    <!-- 構築中通知バー -->
    <div class="fixed top-0 left-0 right-0 z-[60] bg-wet-soil text-stone-white py-2">
      <div class="max-w-7xl mx-auto px-6 text-center">
        <p class="font-mono text-xs tracking-wide">
          <span class="opacity-80">現在サイト構築中です</span>
          <span class="mx-2 opacity-40">|</span>
          <span class="opacity-80">System Construction in Progress</span>
        </p>
      </div>
    </div>

    <!-- Header -->
    <header class="fixed top-8 left-0 right-0 z-50 bg-stone-white/90 backdrop-blur-sm border-b border-warm-gray-200">
      <nav class="max-w-7xl mx-auto px-6 lg:px-12 py-6">
        <div class="flex items-center justify-between">
          <!-- Logo -->
          <a href="/" class="font-serif text-2xl tracking-wide hover:opacity-70 transition-opacity duration-300 text-eolica-green">
            Farm Eolica
          </a>

          <!-- Desktop Navigation Menu (hidden on mobile) -->
          <ul class="hidden md:flex gap-6 lg:gap-10 font-mono text-wet-soil">
            <li>
              <a href="/cultivation" class="flex flex-col items-center gap-0.5 hover:text-old-copper transition-colors duration-300 group whitespace-nowrap">
                <span class="text-xs tracking-widest uppercase">SHIPMENT</span>
                <span class="text-[10px] tracking-wide opacity-60 group-hover:opacity-80">出荷予報</span>
              </a>
            </li>
            <li>
              <a href="/products" class="flex flex-col items-center gap-0.5 hover:text-old-copper transition-colors duration-300 group whitespace-nowrap">
                <span class="text-xs tracking-widest uppercase">PRODUCTS</span>
                <span class="text-[10px] tracking-wide opacity-60 group-hover:opacity-80">研究成果</span>
              </a>
            </li>
            <li>
              <a href="/about" class="flex flex-col items-center gap-0.5 hover:text-old-copper transition-colors duration-300 group whitespace-nowrap">
                <span class="text-xs tracking-widest uppercase">ABOUT</span>
                <span class="text-[10px] tracking-wide opacity-60 group-hover:opacity-80">農園について</span>
              </a>
            </li>
            <li>
              <a href="/contact" class="flex flex-col items-center gap-0.5 hover:text-old-copper transition-colors duration-300 group whitespace-nowrap">
                <span class="text-xs tracking-widest uppercase">CONTACT</span>
                <span class="text-[10px] tracking-wide opacity-60 group-hover:opacity-80">お問い合わせ</span>
              </a>
            </li>
          </ul>

          <!-- Mobile Hamburger Button (visible on mobile only) -->
          <button
            id="hamburger-btn"
            class="md:hidden flex flex-col items-center justify-center w-12 h-12 gap-1.5 hover:opacity-70 transition-opacity duration-300"
            aria-label="メニューを開く"
          >
            <span class="w-6 h-0.5 bg-wet-soil transition-all duration-300"></span>
            <span class="w-6 h-0.5 bg-wet-soil transition-all duration-300"></span>
            <span class="w-6 h-0.5 bg-wet-soil transition-all duration-300"></span>
          </button>
        </div>
      </nav>
    </header>

    <!-- Mobile Menu Overlay -->
    <div
      id="mobile-menu"
      class="fixed inset-0 z-[70] bg-stone-white/95 backdrop-blur-md opacity-0 pointer-events-none transition-opacity duration-300"
    >
      <div class="flex flex-col h-full">
        <!-- Close Button -->
        <div class="flex justify-end p-6 mt-8">
          <button
            id="close-menu-btn"
            class="flex items-center justify-center w-12 h-12 hover:opacity-70 transition-opacity duration-300"
            aria-label="メニューを閉じる"
          >
            <svg class="w-8 h-8 text-wet-soil" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation Links -->
        <nav class="flex-1 flex items-center justify-center">
          <ul class="flex flex-col items-center gap-12 font-mono text-wet-soil">
            <li>
              <a href="/cultivation" class="mobile-menu-link flex flex-col items-center gap-1 hover:text-old-copper transition-colors duration-300 group">
                <span class="text-base tracking-widest uppercase">SHIPMENT</span>
                <span class="text-sm tracking-wide opacity-60 group-hover:opacity-80">出荷予報</span>
              </a>
            </li>
            <li>
              <a href="/products" class="mobile-menu-link flex flex-col items-center gap-1 hover:text-old-copper transition-colors duration-300 group">
                <span class="text-base tracking-widest uppercase">PRODUCTS</span>
                <span class="text-sm tracking-wide opacity-60 group-hover:opacity-80">研究成果</span>
              </a>
            </li>
            <li>
              <a href="/about" class="mobile-menu-link flex flex-col items-center gap-1 hover:text-old-copper transition-colors duration-300 group">
                <span class="text-base tracking-widest uppercase">ABOUT</span>
                <span class="text-sm tracking-wide opacity-60 group-hover:opacity-80">農園について</span>
              </a>
            </li>
            <li>
              <a href="/contact" class="mobile-menu-link flex flex-col items-center gap-1 hover:text-old-copper transition-colors duration-300 group">
                <span class="text-base tracking-widest uppercase">CONTACT</span>
                <span class="text-sm tracking-wide opacity-60 group-hover:opacity-80">お問い合わせ</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <main class="relative z-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="relative z-10 bg-eolica-green text-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-12 py-16">
        <div class="flex flex-col items-center gap-8">
          <!-- Logo -->
          <div class="font-serif text-3xl tracking-wide opacity-90">
            Farm Eolica
          </div>

          <!-- Social Links -->
          <div class="flex gap-8 font-mono">
            <a
              href={SITE_CONFIG.sns.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs tracking-widest uppercase opacity-80 hover:opacity-100 hover:text-old-copper transition-all duration-300"
            >
              Instagram
            </a>
            <a
              href={SITE_CONFIG.sns.note}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs tracking-widest uppercase opacity-80 hover:opacity-100 hover:text-old-copper transition-all duration-300"
            >
              Note
            </a>
            <a
              href={SITE_CONFIG.sns.x}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs tracking-widest uppercase opacity-80 hover:opacity-100 hover:text-old-copper transition-all duration-300"
            >
              X
            </a>
            <a
              href={SITE_CONFIG.sns.line}
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs tracking-widest uppercase opacity-80 hover:opacity-100 hover:text-old-copper transition-all duration-300"
            >
              LINE
            </a>
          </div>

          <!-- Privacy Link -->
          <div>
            <a
              href="/privacy"
              class="text-xs tracking-wide opacity-70 hover:opacity-100 hover:text-old-copper transition-all duration-300 font-mono"
            >
              Privacy Policy
            </a>
          </div>

          <!-- Copyright -->
          <p class="text-xs opacity-60 tracking-wide font-mono">
            &copy; {new Date().getFullYear()} Farm Eolica — Organic Lab
          </p>
        </div>
      </div>
    </footer>

    <!-- Scroll Animation Script -->
    <script>
      // IntersectionObserver for scroll animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-in');
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);

      // Observe all elements with data-animate attribute
      document.addEventListener('DOMContentLoaded', () => {
        const animatedElements = document.querySelectorAll('[data-animate]');
        animatedElements.forEach((el) => observer.observe(el));
      });
    </script>

    <!-- Mobile Menu Script -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const hamburgerBtn = document.getElementById('hamburger-btn');
        const closeMenuBtn = document.getElementById('close-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');

        // Open menu
        const openMenu = () => {
          mobileMenu.classList.remove('opacity-0', 'pointer-events-none');
          mobileMenu.classList.add('opacity-100', 'pointer-events-auto');
          document.body.style.overflow = 'hidden';
        };

        // Close menu
        const closeMenu = () => {
          mobileMenu.classList.remove('opacity-100', 'pointer-events-auto');
          mobileMenu.classList.add('opacity-0', 'pointer-events-none');
          document.body.style.overflow = '';
        };

        // Event listeners
        hamburgerBtn?.addEventListener('click', openMenu);
        closeMenuBtn?.addEventListener('click', closeMenu);

        // Close menu when clicking on a link
        mobileMenuLinks.forEach(link => {
          link.addEventListener('click', closeMenu);
        });

        // Close menu when clicking outside
        mobileMenu?.addEventListener('click', (e) => {
          if (e.target === mobileMenu) {
            closeMenu();
          }
        });

        // Close menu on escape key
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && mobileMenu.classList.contains('opacity-100')) {
            closeMenu();
          }
        });
      });
    </script>

    <style>
      [data-animate] {
        opacity: 0;
        transform: translateY(40px);
        transition: opacity 1s ease-out, transform 1s ease-out;
      }

      [data-animate].animate-in {
        opacity: 1;
        transform: translateY(0);
      }

      /* Hide scrollbar for mobile navigation */
      .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      .no-scrollbar::-webkit-scrollbar {
        display: none;
      }
    </style>
  </body>
</html>
